<h2><%= link_to petition.action, petition_result_path(petition) %></h2>
<% case petition.state %>
<% when "open" %>
  <p><%= signature_count(:default, petition.signature_count) %></p>
<% when "closed" %>
  <p><%= signature_count(:default, petition.signature_count) %>, now closed</p>
<% when "rejected" %>
  <p>Rejected</p>
<% end %>
